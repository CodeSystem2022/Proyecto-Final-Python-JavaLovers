<Ui>:
    MDScreen:
        name: 'login'
        MDFloatLayout:
            id: login_layout
            md_bg_color: 1,1,1,1

            MDIconButton:
                icon: 'chevron-left'
                user_font_size: '35sp'
                pos_hint: {'center_y': 0.95}

            MDLabel:
                text: "Atras " #por si se quiere agregar texto al lado del buton de restroceder
                font_size: '18sp'
                pos_hint: {'center_x': .615, 'center_y': .949}


            MDTextField:
                id: input_email
                hint_text: 'Ingrese Email'
                helper_text: ""
                helper_text_mode: "persistent"
                pos_hint: {'center_x': .5, 'center_y': .52}

                size_hint_x: .85
                line_color_focus: 0,0,0, 1

            MDTextField:
                id: input_Password
                hint_text: 'Ingrese Clase'
                helper_text: ""
                helper_text_mode: "persistent"
                password: True

                pos_hint: {'center_x': .5, 'center_y': .42}
                size_hint_x: .85
                line_color_focus: 0,0,0, 1

            MDTextButton:
                text: 'No sabes la clave'
                font_size: '9sp'
                haling: 'center'
                color: 120/255, 120/255, 120/255, 1
                pos_hint: {'center_x': .50, 'center_y': .370}

            MDFlatButton:
                text: 'Ingresar'
                size_hint: .79, .08
                pos_hint: {'center_x': .50, 'center_y': .25}

                canvas.before:
                    Color:
                        rgb: 41/255, 135/255, 168/255
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [6]

            MDIconButton:
                icon: "arrow-left"
                pos_hint: {'center_x': .50, 'center_y': .10}
                on_release: root.current = 'inicio'